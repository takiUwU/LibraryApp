<Window x:Class="LibraryApp.win.Admin_Edit_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryApp.win"
        mc:Ignorable="d"
        Title="Admin_Edit_Window" Height="500" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <Image Height="auto" Width="auto" Stretch="UniformToFill" Source="/win/pages/bookcases_bg.jpg"/>
        <Rectangle x:Name="settings_BG" Grid.Row="1" Grid.Column="1" StrokeThickness="7"  RadiusX="2" RadiusY="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5,10,5,75" Opacity="0.75">
            <Rectangle.Stroke>
                <LinearGradientBrush EndPoint="0,1" StartPoint="1,0">
                    <GradientStop Color="White"/>
                    <GradientStop Color="#FFADADAD" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Stroke>
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0,1" StartPoint="1,0">
                    <GradientStop Color="White"/>
                    <GradientStop Color="#FFADADAD" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <Grid>
            <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
                <Label x:Name="FirstLabel" Content="" HorizontalAlignment="Center" Foreground="Black" FontSize="15" FontWeight="SemiBold" FontFamily="Arial" VerticalAlignment="Center" Margin="10" Grid.Row="1"/>
                <Label x:Name="SecondLabel" Content="" HorizontalAlignment="Center" Foreground="Black" FontSize="15" FontWeight="SemiBold" FontFamily="Arial" VerticalAlignment="Center" Margin="10" Grid.Row="2"/>
                <Label x:Name="ThirdLabel" Content="" HorizontalAlignment="Center" Foreground="Black" FontSize="15" FontWeight="SemiBold" FontFamily="Arial" VerticalAlignment="Center" Margin="10" Grid.Row="3"/>
                <Label x:Name="FourthLabel" Content="" HorizontalAlignment="Center" Foreground="Black" FontSize="15" FontWeight="SemiBold" FontFamily="Arial" VerticalAlignment="Center" Margin="10" Grid.Row="4"/>
                <Label x:Name="FifthLabel" Content="" HorizontalAlignment="Center" Foreground="Black" FontSize="15" FontWeight="SemiBold" FontFamily="Arial" VerticalAlignment="Center" Margin="10" Grid.Row="5"/>
                <Label x:Name="SixthLabel" Content="" HorizontalAlignment="Center" Foreground="Black" FontSize="15" FontWeight="SemiBold" FontFamily="Arial" VerticalAlignment="Center" Margin="10" Grid.Row="6"/>
            

                <TextBox x:Name="FirstTextBox" Text="" HorizontalAlignment="Stretch" Grid.Column="1" Margin="0,10" Grid.Row="1" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="15" FontWeight="SemiBold" FontFamily="Arial" Visibility="Collapsed"/>
                <TextBox x:Name="SecondTextBox" Text="" HorizontalAlignment="Stretch" Grid.Column="1" Margin="0,10" Grid.Row="2" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="15" FontWeight="SemiBold" FontFamily="Arial" Visibility="Collapsed"/>
                <TextBox x:Name="ThirdTextBox" Text="" HorizontalAlignment="Stretch" Grid.Column="1" Margin="0,10" Grid.Row="3" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="15" FontWeight="SemiBold" FontFamily="Arial" Visibility="Collapsed"/>
                <TextBox x:Name="FourthTextBox" Text="" HorizontalAlignment="Stretch" Grid.Column="1" Margin="0,10" Grid.Row="4" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="15" FontWeight="SemiBold" FontFamily="Arial" Visibility="Collapsed"/>
                <TextBox x:Name="FifthTextBox" Text="" HorizontalAlignment="Stretch" Grid.Column="1" Margin="0,10" Grid.Row="5" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="15" FontWeight="SemiBold" FontFamily="Arial"  Visibility="Collapsed"/>
                <TextBox x:Name="SixthTextBox" Text="" HorizontalAlignment="Stretch" Grid.Column="1" Margin="0,10" Grid.Row="6" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="15" FontWeight="SemiBold" FontFamily="Arial"  Visibility="Collapsed"/>


                <ComboBox x:Name="FirstComboBox" Text="" HorizontalAlignment="Stretch" Grid.Column="1" Margin="0,10" Grid.Row="1" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="15" FontWeight="SemiBold" FontFamily="Arial" Visibility="Collapsed" />
                <ComboBox x:Name="SecondComboBox" Text="" HorizontalAlignment="Stretch" Grid.Column="1" Margin="0,10" Grid.Row="2" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="15" FontWeight="SemiBold" FontFamily="Arial" Visibility="Collapsed"/>
                <DatePicker x:Name="ThirdDatePicker" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" FontWeight="SemiBold" FontFamily="Arial" Visibility="Collapsed"/>
                <DatePicker x:Name="FourthDatePicker" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" FontWeight="SemiBold" FontFamily="Arial" Visibility="Collapsed"/>

            </Grid>

            <!-- Кнопка -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Label x:Name="ModeLabel" Content="" HorizontalAlignment="Center" Foreground="Black" FontSize="20" FontWeight="SemiBold" FontFamily="Arial" VerticalAlignment="Center" Margin="10"/>
                <Button x:Name="CreateButton" Grid.Row="2" Content="Подтвердить" Margin="5" FontSize="25" FontWeight="SemiBold" Click="CreateButtonClick" FontFamily="Arial" BorderThickness="5"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
