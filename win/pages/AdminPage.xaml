<Page x:Class="LibraryApp.win.pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryApp.win.pages"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="AdminPage">

    <Page.Resources>
        <Style x:Key="CenterStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Image Height="auto" Width="auto" Stretch="UniformToFill" Source="/win/pages/bookcases_bg_darkest.jpg" />
        <Image x:Name="exit_button" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5" Height="80" MouseLeftButtonUp="Exit_MouseClick" Source="/win/pages/exit_button.png"/>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>
            <Label Content="СТРАНИЦА АДМИНИСТРАТОРА" HorizontalAlignment="Center" Foreground="White" FontSize="42" FontWeight="SemiBold" FontFamily="Arial" VerticalAlignment="Center" Margin="10"/>
            <ListBox x:Name="DBSelectList" Grid.Column="1" SelectionChanged="DBSelectionChanged" VerticalContentAlignment="Stretch" FontWeight="Bold" FontSize="24">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Key, Mode=OneWay}" FontWeight="Bold"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <DataGrid x:Name="DataBaseTable" Grid.Row="1" AutoGenerateColumns="False" RowHeight="100" VerticalContentAlignment="Center" HorizontalContentAlignment="Stretch" Background="#66F0F0F0" FontSize="18" FontWeight="Bold" SelectionMode="Single" IsReadOnly="True" SelectionChanged="DataBaseTable_SelectionChanged"/>
            <Grid Grid.Row="1" Grid.Column="1" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>
                <Grid Margin="2" Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label x:Name="FirstLabel" Content="" HorizontalAlignment="Stretch" Foreground="White" FontSize="22" FontWeight="SemiBold" FontFamily="Arial" VerticalAlignment="Center"/>
                    <TextBox x:Name="FirstTextBox" Text="" HorizontalAlignment="Stretch" Grid.Column="1" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="25" FontWeight="SemiBold" FontFamily="Arial" TextChanged="SearchTextChanged" Visibility="Collapsed"/>
                </Grid>
                <Grid Margin="2" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label x:Name="SecondLabel" Content="" HorizontalAlignment="Stretch" Foreground="White" FontSize="22" FontWeight="SemiBold" FontFamily="Arial" VerticalAlignment="Center"/>
                    <TextBox x:Name="SecondTextBox" Text="" HorizontalAlignment="Stretch" Grid.Column="1" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="25" FontWeight="SemiBold" FontFamily="Arial" TextChanged="SearchTextChanged" Visibility="Collapsed"/>
                </Grid>
                <Grid Margin="2" Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label x:Name="ThirdLabel" Content="" HorizontalAlignment="Stretch" Foreground="White" FontSize="18" FontWeight="SemiBold" FontFamily="Arial" VerticalAlignment="Center" />
                    <TextBox x:Name="ThirdTextBox" Text="" HorizontalAlignment="Stretch" Grid.Column="1" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="25" FontWeight="SemiBold" FontFamily="Arial" TextChanged="SearchTextChanged" Visibility="Collapsed"/>
                </Grid>

                <Grid Grid.Row="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Button x:Name="CreateButton" Grid.Row="0" Content="Создать" Margin="5" FontSize="25" FontWeight="SemiBold" Click="CreateButtonClick" FontFamily="Arial" BorderThickness="5"/>
                    <Button x:Name="EditButton" Grid.Row="1" Content="Изменить" Margin="5" FontSize="25" FontWeight="SemiBold" Click="EditButtonClick" FontFamily="Arial" BorderThickness="5"/>
                    <Button x:Name="DeleteButton" Grid.Row="2" Content="Удалить" Margin="5" FontSize="25" FontWeight="SemiBold" Click="DeleteButtonClick" FontFamily="Arial" BorderThickness="5"/>
                </Grid>

            </Grid>
        </Grid>

    </Grid>
</Page>
