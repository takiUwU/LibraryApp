<Page x:Class="LibraryApp.win.pages.librarian.LibrarianCreateNewReader"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryApp.win.pages.librarian"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LibrarianCreateNewReader">

    <Grid>
        <Image Height="auto" Width="auto" Stretch="UniformToFill" Source="/win/pages/librarian/bookcases_bg_darkest.jpg" />

        <Image x:Name="exit_button" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5" Height="80" MouseLeftButtonUp="Exit_MouseClick" Source="/win/pages/librarian/exit_button.png"/>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="1.2*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Rectangle x:Name="settings_BG" Grid.Row="1" Grid.Column="1" StrokeThickness="7"  RadiusX="2" RadiusY="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Rectangle.Stroke>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="1,0">
                        <GradientStop Color="White"/>
                        <GradientStop Color="#FFADADAD" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.Stroke>
                <Rectangle.Fill>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="1,0">
                        <GradientStop Color="White"/>
                        <GradientStop Color="#FFADADAD" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="20" Grid.Row="1" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="3*"/>
                    </Grid.RowDefinitions>
                    <Label Content="Телефон" FontSize="30" FontWeight="ExtraBold" FontFamily="Arial" Grid.Row="0" VerticalAlignment="Center"/>
                    <TextBox x:Name="PhoneTextBox"  BorderBrush="Black" BorderThickness="2" FontFamily="Arial" FontSize="34" VerticalContentAlignment="Center" Grid.Row="1"/>
                    <Label Content="Имя" FontSize="30" FontWeight="ExtraBold" FontFamily="Arial" Grid.Row="2" VerticalAlignment="Center"/>
                    <TextBox x:Name="NameTextBox" BorderBrush="Black" BorderThickness="2" FontFamily="Arial" FontSize="34" VerticalContentAlignment="Center" Grid.Row="3"/>
                </Grid>
                <Button x:Name="Register_Reader" Grid.Row="3" Content="Добавить" Margin="5" FontSize="35" FontWeight="SemiBold" Click="Reqister_User_Button" FontFamily="Arial" BorderThickness="5"/>
            </Grid>
        </Grid>

    </Grid>
</Page>
